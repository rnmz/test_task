<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".OnboardFragment">


    <TextView
        android:id="@+id/one_k_courses"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="@string/one_thousand_courses"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:paddingTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />


    <LinearLayout
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="200dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintBottom_toTopOf="@id/buttonNext"
        app:layout_constraintTop_toBottomOf="@id/one_k_courses"
        android:layout_marginEnd="-10dp">
        <LinearLayout
            android:id="@+id/tags_one"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="-60dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="1С Администрирование"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tag_stroke_green"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginVertical="10dp"
                android:rotation="345"
                android:text="RabbitMQ"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Трафик"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tags_two"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-14dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:padding="10dp"
                android:layout_marginStart="-50dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Контент маркетинг"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="B2B маркетинг"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"

                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Google Аналитика"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tags_three"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="-10dp"
                android:text="UX исследователь"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Веб-аналитика"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/tag_stroke_green"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:rotation="15"
                android:text="Big Data"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tags_four"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:padding="10dp"
                android:layout_marginStart="-100dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Геймдизайн"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Веб-дизайн"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Cinema 4D"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="-30dp"
                android:text="Промпт инженер"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tags_five"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-15dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="-60dp"
                android:text="Webflow"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/tag_stroke_green"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:rotation="345"
                android:text="Three.js"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Парсинг"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/tag_stroke"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Python-разрабочик"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/btn_continue"
        android:padding="10dp"
        android:textSize="18sp"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tags"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/btn_continue"
        android:textColor="@color/white"
        android:background="@drawable/tag_stroke_green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>